codeLabel.Size = UDim2.new(0, 320, 0, 24)

-- üí¨ Moving Warning Messages
local movingText = Instance.new("TextLabel", bg)
movingText.Text = ""
movingText.Font = Enum.Font.FredokaOne
movingText.TextColor3 = Color3.fromRGB(255, 255, 255)
movingText.TextSize = 24
movingText.BackgroundTransparency = 1
movingText.Position = UDim2.new(0.5, -300, 0.93, 0)
movingText.Size = UDim2.new(0, 600, 0, 30)

local movingMessages = {
  "Hello User Don't Leave........",
  "If you get stuck on 100% Don't leave.......",
  "Use your main to avoid Stuck Bug.......",
}

task.spawn(function()
  while true do
    for _, msg in ipairs(movingMessages) do
      for i = 1, #msg do
        movingText.Text = string.sub(msg, 1, i)
        task.wait(0.03)
      end
      task.wait(2)
    end
  end
end)

-- ‚è≤Ô∏è 1 Minute Progress
task.spawn(function()
  local totalTime = 60 -- 1 minute
  local steps = 100
  local delay = totalTime / steps

  for i = 1, steps do
    local percent = i / steps
    progressBar.Size = UDim2.new(percent, 0, 1, 0)
    percentText.Text = tostring(math.floor(percent * 1000) / 10) .. "%"
    task.wait(delay)
  end

  progressBar.Size = UDim2.new(1, 0, 1, 0)
  percentText.Text = "100.0%"
  status.Text = "Done! Script Loaded Successfully."
end)
