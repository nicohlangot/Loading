-- üß† Services
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local HttpService = game:GetService("HttpService")

-- üßç Player
local player = Players.LocalPlayer

-- üñºÔ∏è UI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "GrowLoadingUI"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = CoreGui

-- üåà Background (Red ‚Üî Blue Color Animation)
local bg = Instance.new("Frame", screenGui)
bg.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- start red
bg.Size = UDim2.new(1, 0, 1, 0)

-- üî• Animate background color smoothly
task.spawn(function()
    while true do
        TweenService:Create(bg, TweenInfo.new(3, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut), {
            BackgroundColor3 = Color3.fromRGB(0, 0, 255) -- blue
        }):Play()
        task.wait(3)

        TweenService:Create(bg, TweenInfo.new(3, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut), {
            BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- red
        }):Play()
        task.wait(3)
    end
end)

-- üå∏ Title
