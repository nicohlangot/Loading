-- üß© Unique Code Generator
local function generateCode()
  local function randBlock()
    local chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
    local block = ""
    for _ = 1, 4 do
      block = block .. string.sub(chars, math.random(1, #chars), 1)
    end
    return block
  end
  return "COD3-" .. randBlock() .. "-" .. randBlock()
end

local generatedCode = generateCode()

-- üü™ Follow TikTok Text
local tiktokText = Instance.new("TextLabel", bg)
tiktokText.Text = "Follow mufasaxzc on TikTok Click The Bio And Join To Get Free Pets"
